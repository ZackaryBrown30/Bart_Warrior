<script>
    
    window.zacksubmits = () => {
        const form = document.getElementById('subscribe');
        const formData = new FormData(form);
        let output = "";

        for (const [key, value] of formData) {
            output += `${key}: ${value}\n`;
        }
            
        console.log("Form Data Turd",output)

    }

</script>

<div id="accordion2">
    <div class="card text-center">
    <div class="card-header bg-warning row m-3 text-center
    " id="subscriptionBox">
        <button class="btn text-primary text-center mx-auto" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
        <h1>Schedule Alerts</h1>
        </button>
        </div class="container">
    <div 
    id="collapseThree" 
    class="collapse" 
    aria-labelledby="subscriptionBox" 
    data-parent="#accordion2">
