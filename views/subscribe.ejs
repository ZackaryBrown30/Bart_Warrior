                <tr>
                    <td scope="row">Thursday</td>
                    <td>
                        <input type="time" name="" id="thursday">
                        <input type="hidden" value="Thursday">

                    </td>
                </tr>
                <tr>
                    <td scope="row">Friday</td>
                    <td>
                        <input type="time" name="" id="friday">
                        <input type="hidden" value="Friday">
                    </td>
                </tr>
                <tr>
                    <td scope="row">Saturday</td>
                    <td>
                        <input type="time" name="" id="saturday">
                        <input type="hidden" value="Saturday">
                    </td>
                </tr>
                <tr>
                    <td scope="row">Sunday</td>
                    <td>
                        <input 
                        id="saunday"
                        type="time" 
                        value="" 
                        name="">
                        <input type="hidden" value="Sunday">
                    </td>
                </tr>
            </tbody>
            </table>
            <br>
        </select>
            <div class="form-group">
                <div class="form-check">
                    <label 
                    class="text-primary">
                    Text Notification</label>
                    <!-- <input 
                        class="form-check-input" 
                        type="checkbox" 
                        role="switch" 
                        id="phoneSwitch"> -->
                        <input 
                        name="phone"
                        id="phone"
                        value="null"
                        type="tel" 
                        placeholder="Phone #" 
                        aria-label="Phone number input for scheduled notifications">
                </div>
                <br>
                <div class="form-check" >
                    <label 
                    class="form-check-label text-primary" id="email">
                    Email Notification</label>
                        <input 
                        name="email"
                        id="email"
                        value="null"
                        type="email"
                        aria-describedby="emailInput"
                        placeholder="@"
                        aria-label="Email">
                </div>
                <br>
                <div class="form-check">
                    <label
                    class="input-group-prepend form-check-label text-primary"
                    id="Station-Label"
                    >Station</label>
                        <input 
                        name="station"
                        id="station"
                        value="<%= North.root.station[0].name %>"
